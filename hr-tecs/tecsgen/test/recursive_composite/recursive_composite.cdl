import_C( "tecs.h" );

signature sSig1 {
  int32_t  func1( [in]int32_t a );
  int32_t  func2( [in]int32_t a );
};

signature sSig2 {
  int32_t  func1( [in]int32_t a );
  int32_t  func2( [in]int32_t a );
};

signature sSig3 {
  int32_t  func1( [in]int32_t a );
  int32_t  func2( [in]int32_t a );
};

signature sSig4 {
  int32_t  func1( [in]int32_t a );
  int32_t  func2( [in]int32_t a );
};

signature sSig5 {
  int32_t  func1( [in]int32_t a );
  int32_t  func2( [in]int32_t a );
};


celltype tCell1 {
  entry sSig1 eEntry1;
  call  sSig2 cCall1;
  attr{
    int32_t a;
  };
};

celltype tCell2 {
  entry sSig2 eEntry2;
  call  sSig3 cCall2;
  attr{
    int32_t a;
  };
};

composite tComp11 {

  call sSig3 cCall;
  entry sSig1 eEntry;

  cell tCell2 cell2;

  cell tCell1 cell1{
    cCall1 = cell2.eEntry2;
    a = 10;
  };
  cell tCell2 cell2 {
    a = 20;
    cCall2 => cCall;
  };

  eEntry => cell1.eEntry1;
};


celltype tCell3 {
  entry sSig3 eEntry3;
  call  sSig4 cCall3;
  attr{
    int32_t a;
  };
};

celltype tCell4 {
  entry sSig4 eEntry4;
  call  sSig5 cCall4;
  attr{
    int32_t a;
  };
};

composite tComp12 {

  attr {
    int32_t a = 30;
  };
  entry sSig3 eEntry;
  call sSig5 cCall;

  cell tCell4 cell4;

  cell tCell3 cell3{
    cCall3 = cell4.eEntry4;
    a = 30;
  };
  cell tCell4 cell4 {
    a = composite.a;
    cCall4 => cCall;
  };
  eEntry => cell3.eEntry3;
};


composite tComp3 {

  attr {
    int32_t a;
  };
  entry sSig1 eEntry;
  call sSig5 cCall;

  cell tComp12 comp12;

  cell tComp11 comp11 {
    cCall = comp12.eEntry;
  };

  cell tComp12 comp12 {
    cCall => composite.cCall;
    a = composite.a;
  };

  eEntry => comp11.eEntry;
};

celltype tCell_serv {
  entry sSig5 eEntry;
  attr {
    int32_t a;
  };
};

[singleton]
celltype tCell_clnt {
  call sSig1 cCall[2];
  attr {
    int32_t a;
  };
};


cell tCell_clnt cell_clnt {
  a = 30;
  cCall[0] = comp1.eEntry;
  cCall[1] = comp2.eEntry;
};

cell tComp3 comp2 {
  a=10;
  cCall = cell_serv1.eEntry;
};

cell tCell_serv cell_serv2{
   a = 201;
};

cell tComp3 comp1 {
  a=101;
  cCall = cell_serv1.eEntry;
};

cell tCell_serv cell_serv1{
   a = 5;
};
